{
  "enabled": true,
  "name": "Pre-commit Documentation Check",
  "description": "Monitors for git commit operations and ensures CHAT_LOG.md and DEV_DIARY.md are up to date before allowing the commit to proceed",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      ".git/index"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "A git commit is about to happen. Please review and update CHAT_LOG.md and DEV_DIARY.md to ensure they reflect the current state of the project and any recent changes. Make sure both files are current before the commit proceeds."
  }
}